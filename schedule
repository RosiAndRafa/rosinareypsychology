<!-- Calendar Initialization Script -->
<script>
    // Initialize the calendar in Spanish
    flatpickr("#calendar", {
        locale: "es",              // Language is set to Spanish
        enableTime: true,          // Enables time selection
        dateFormat: "Y-m-d H:i",   // Date format: Year-Month-Day Hour:Minute
        minDate: "today",          // Blocks past dates
        onChange: function(selectedDates, dateStr, instance) {
            console.log("Selected date and time:", dateStr); // Logs the selection to the console
        }
    });
</script>

